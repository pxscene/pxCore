#!/bin/bash
BASE_DIR=/Applications/Pxscene.app
LOG_FILE=/var/tmp/pxscene/installer.out
printf "post install\n" >> ${LOG_FILE} 2>&1
#echo "PRE OUTPUT -----" >> ${LOG_FILE} 2>&1
#echo "$KS_PREINSTALL_OUT" >> ${LOG_FILE} 2>&1
#echo "POST OUTPUT -------" >> ${LOG_FILE} 2>&1
#echo "$KS_INSTALL_OUT" >> ${LOG_FILE} 2>&1
TS=`date "+%Y-%m-%d %H:%M:%S"`
printf "${KS_Version}\n" > ${BASE_DIR}/Contents/MacOS/version
printf "${TS} > The new pxscene version is ${KS_Version}\n" >> ${LOG_FILE} 2>&1
